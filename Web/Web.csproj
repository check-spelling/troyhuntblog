            SourceFiles="@(CssFiles)"
            DeleteSourceFiles="false"
            OutputFile="%(CssFiles.Identity).min"
            CompressionType="Standard"
            LoggingType="Info"
            PreserveComments="false"
            LineBreakPosition="-1"
      />
      -->
    <JavaScriptCompressorTask SourceFiles="@(JavaScriptFiles)" DeleteSourceFiles="false" OutputFile="Scripts/TroyHunt.min.js" CompressionType="Standard" ObfuscateJavaScript="True" PreserveAllSemicolons="False" DisableOptimizations="No" EncodingType="Default" LineBreakPosition="-1" LoggingType="Info" ThreadCulture="en-au" IsEvalIgnored="false" />
    <!-- The version below produces the exact same results -->
    <!--
