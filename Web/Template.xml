            <b:widget id='Blog1' locked='true' title='Blog Posts' type='Blog'>
              <b:includable id='post' var='post'>
                <b:if cond='data:blog.pageType == &quot;item&quot;'>
                  <b:if cond='data:post.firstImageUrl'>
                    <meta name='twitter:image' expr:content='data:post.firstImageUrl'/> 
                  <b:else/>
                    <b:if cond='data:blog.postImageThumbnailUrl'>
                      <meta name='twitter:image' expr:content='data:blog.postImageThumbnailUrl'/> 
                    </b:if>
                  </b:if>
                  <meta name='twitter:description' expr:content='data:post.snippet'/>
                </b:if>
                <meta expr:content='data:blog.blogId' itemprop='blogId'/>
                <meta expr:content='data:post.id' itemprop='postId'/>
                <h2>
                  <b:if cond='data:post.url'>
                    <b:if cond='data:blog.url != data:post.url'>
                      <a expr:href='data:post.url'>
                        <data:post.title/>
                      </a>
                      <b:else/>
                      <data:post.title/>
                    </b:if>
                  </b:if>
                </h2>
                <div class="socialShare">
                  <b:if cond='data:blog.pageType == &quot;item&quot;'>
                    <div class="addthis_toolbox addthis_default_style">
                      <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
                      <a class="addthis_button_tweet"></a>
                      <a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
                      <a class="addthis_counter addthis_pill_style"></a>
                    </div>
                    <b:else/>
                    <a expr:href='data:post.url + &quot;#disqus_thread&quot;' class="commentsReactions" />
                  </b:if>
                </div>
                <p>
                  <data:post.dateHeader/>
                </p>
                <div class='post-body entry-content'>
                  <data:post.body/>
                </div>
                <div class="clearFix">
                  <b:if cond='data:blog.pageType == &quot;item&quot;'>
                    <p class="postFooter">
                      <a href="https://twitter.com/troyhunt" class="twitter-follow-button" data-show-count="false">Follow @troyhunt</a><br/>
                      Posted at <data:post.timestamp/>, <data:post.dateHeader/>
                    </p>
                  </b:if>
                  <b:if cond='data:post.labels'>
                    <p class="tags">
                      Tags:
                      <b:loop values='data:post.labels' var='label'>
                        <a expr:href='data:label.url' rel='tag'>
                          <data:label.name/>
                        </a>
                      </b:loop>
                    </p>
                  </b:if>
                </div>
                <b:if cond='data:post.hasJumpLink'>
                  <p class='readMore'>
                    <a expr:href='data:post.url' expr:title='data:post.title' class="more">
                      Read more
                    </a>
                  </p>
                </b:if>
                <b:if cond='data:blog.pageType == &quot;item&quot;'>
                  <div id="ad3" data-type="ad" data-publisher="lqm.troyhunt.site" data-zone="ron" data-format="728x90"></div>
